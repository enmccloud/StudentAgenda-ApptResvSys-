@model IEnumerable<StudentAgenda.Areas.GroupMember.Models.GroupMembers>

@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

 }

<h1>Index</h1>

<p>
    <a asp-area="GroupMember" asp-controller= "GroupMember" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        <a asp-area="GroupMember" asp-controller= "GroupMember" asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
        <a asp-area="GroupMember" asp-controller= "GroupMember" asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
        <a asp-area="GroupMember" asp-controller= "GroupMember" asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
